 <div class="banner">
  <div class="container">
    <h1>Shaken by... </h1>
    <p>Unique cocktails shaken by your favourite shaker</p>
  </div>
</div>

<div class="container">
  <div class="cocktail-grid">
    <% @cocktails.each do |cocktail| %>
      <div class="cocktail-card" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= cl_image_path cocktail.photo.attached? ? cocktail.photo.key : "onuxyhlimfgzew486yci", width: 400, height: 300, crop: :fill %>');">
        <h3><%= link_to "#{cocktail.name}", cocktail_path(cocktail.id) %></h3>
        <p class='shaken_by'> Shaken by: <%=cocktail.created_by%></p>
        <%= link_to cocktail_path(cocktail), class: 'cocktail-delete', method: :delete, data: { confirm: "Are you sure?" } do %>
          <i class="fas fa-trash-alt"></i>
        <% end %>
      </div>
    <% end %>
  </div>
</div>

