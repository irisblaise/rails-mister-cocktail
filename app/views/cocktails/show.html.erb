<div class="container">
  <div class="row">
    <div class="col-6 offset-3">


<div class="card-product">
  <%= cl_image_tag @cocktail.photo.key, height: 200, width: 100, crop: :fill %>
  <div class="card-product-infos">
    <h2><%= @cocktail.name%></h2>
    <ul>
  <% @cocktail.doses.each do |dose| %>
  <li> <%= "#{dose.ingredient.name} #{dose.description}" %>
    <%= link_to edit_cocktail_dose_path(@cocktail, dose) do %>
      <i class="far fa-edit"></i>
    <% end %>
    <%= link_to dose_path(dose), method: :delete, data: { confirm: "Are you sure?" } do %>
      <i class="fas fa-trash-alt"></i>
    <% end %>
    </li>
  <% end %>
  </div>
</div>



<h4>Add a ingrdient</h4>
<%= simple_form_for [@cocktail, @dose] do |f| %>
  <div class="form-group">
     <%= f.association :ingredient, input_html: { class:"select2" }%>
    <%= f.input :description %>
    <%= f.button :submit, {class: "btn btn-primary"}%>
  </div>
<% end %>

<%= link_to "update your cocktail",  edit_cocktail_path, {class: "btn btn-primary"} %>


       </div>
   </div>
</div>
