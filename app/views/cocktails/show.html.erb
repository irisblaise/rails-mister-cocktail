<h1><%= @cocktail.name%></h1>

<h2>ingredients</h2>

<ul>
  <% @cocktail.doses.each do |dose| %>
  <li> <%= "#{dose.ingredient.name} #{dose.description}" %>
    <%= link_to edit_cocktail_dose_path(@cocktail, dose) do %>
      <i class="far fa-edit"></i>
    <% end %>
    <%= link_to dose_path(dose), method: :delete, data: { confirm: "Are you sure?" } do %>
      <i class="fas fa-trash-alt"></i>
    <% end %>
    </li>
  <% end %>
</ul>


<h4>Add a ingrdient</h4>
<%= simple_form_for [@cocktail, @dose] do |f| %>
  <div class="form-group">
     <%= f.association :ingredient%>
    <%= f.input :description %>
    <%= f.button :submit, {class: "btn btn-primary"}%>
  </div>
<% end %>

<%= link_to "back to al cocktails", cocktails_path, {class: "btn btn-primary"}%>
<%= link_to "update your cocktail",  edit_cocktail_path, {class: "btn btn-primary"} %>


