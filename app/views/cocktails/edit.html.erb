 <div class="container">
      <div class="row">
        <div class="col-6 offset-3">
          <h1>Update your cocktail</h1>

          <%= simple_form_for(@cocktail) do |f| %>
            <div class="form-group">
              <%= f.input :name %>
              <%= f.input :photo, as: :file %>
               <%= f.input :created_by %>
              <%= f.button :submit, {class: "btn btn-primary"}%>
            </div>
          <% end %>
        </div>
      </div>
    </div>

